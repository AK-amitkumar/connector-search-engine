<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_solr_config_settings" model="ir.ui.view">
            <field name="name">solr settings</field>
            <field name="model">solr.config.settings</field>
            <field name="arch" type="xml">
                <form string="Configure SolR" version="7.0" class="oe_form_configuration">
                    <header>
                        <button string="Apply" type="object" name="execute" class="oe_highlight"/>
                        or
                        <button string="Cancel" type="object" name="cancel" class="oe_link"/>
                    </header>
                    <separator string="SolR"/>
                    <group>
                        <label for="id" string="SolR"/>
                        <div>
                            <div>
                                <field name="solr_url" class="oe_inline"/>
                                <label for="solr_url"/>
                            </div>
                            <div>
                                <field name="solr_language_id" class="oe_inline"/>
                                <label for="solr_language_id"/>
                            </div>
                        </div>
                        <button name="index_all" string="Re-Index All" type="object"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_solr_config_settings" model="ir.actions.act_window">
            <field name="name">Configure SolR</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">solr.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
        </record>

        <menuitem id="menu_solr_config_settings" name="SolR" parent="base.menu_config"
            sequence="5" action="action_solr_config_settings"/>

    </data>
</openerp>
